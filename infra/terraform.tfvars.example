# Portfolio Infrastructure Configuration
# Copy this file to terraform.tfvars and fill in your values

# Required: Your domain name
domain_name = "portfolio.example.com"

# Required: Route53 hosted zone ID for the domain
# If using subdomain delegation, create a hosted zone for your subdomain first
hosted_zone_id = "Z1234567890ABC"

# Optional: Project name (used for resource naming)
# project = "portfolio"

# Optional: AWS region
# aws_region = "us-east-1"

# Optional: Path to OpenNext build output for frontend
# open_next_frontend_build_path = "../src/frontend/.open-next"

# Optional: Path to OpenNext build output for Payload backend
# open_next_backend_build_path = "../src/backend/.open-next"

# Optional: CIDR blocks for direct database access (bastion/VPN)
# bastion_cidr_blocks = ["10.0.0.0/8"]
